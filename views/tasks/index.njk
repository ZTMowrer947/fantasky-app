{% set path = "/tasks" %}
{% set title = "Tasks | Fantasky" %}

{% extends "_layout.njk" %}

{% block styles %}
  {{ super() }}

  <style>
      .task-module {
        border-radius: 8px;
        min-height: 107px;
        padding: 30px;
        margin-bottom: 30px;
      }

      .task-module:hover {
        background: firebrick;
      }

      .task-module,
      .task-module:hover {
        text-decoration: none;
      }

      .task-module.task-add-module:hover {
        background: gray;
      }

      .task-link {
        display: block;
        cursor: pointer;
        border: 0;
      }

      .task-title {
        font-size: 20px;
        font-weight: bold;
        color: var(--light);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .task-module:hover .task-title {
        color: gray;
      }

      .task-timing,
      .task-title,
      .task-streak {
        color: var(--light);
      }
    </style>
{% endblock %}

{% block content %}
  <div class="row w-100">
    {% for task in tasks %}
      <div class="col-12 col-lg-6 col-xl-4">
      <a
        class="task-module task-link bg-danger w-100"
        href="/tasks/{{ task.id }}"
      >
        <h3 class="task-title">
          {{ task.name | safe }}
        </h3>

        <p class="task-timing">{{ task.activeDays }}</p>
      </a>
    </div>
    {% endfor %}
    <div class="col-12 col-lg-6 col-xl-4">
      <a
        class="task-module task-add-module task-link bg-light w-100"
        href="/tasks/new"
      >
        <br />
        <h3 class="text-center text-danger">+ New Task</h3>
      </a>
    </div>
  </div>
{% endblock %}
