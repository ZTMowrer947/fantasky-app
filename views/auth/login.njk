{% set path = "/login" %}
{% set title = "Log in | Fantasky" %}

{% extends "_layout.njk" %}

{% import "../partials/_forms.njk" as forms %}

{% block content %}
  <div class="row">
    <div class="col"></div>
    <div class="col-8 col-md-6 col-lg-4">
      {% if failureMessage %}
        <div class="alert alert-danger" role="alert">
          {{ failureMessage }}
        </div>
      {% endif %}

      <h1>Log In</h1>

      <form method="POST">
        {{
          forms.group(
            name = 'emailAddress',
            labelText = 'Email',
            value = '',
            error = '',
            inputType = 'email'
          )
        }}
        {{
          forms.group(
            name = 'password',
            labelText = 'Password',
            value = '',
            error = '',
            inputType = 'password'
          )
        }}

        {{ forms.csrf(csrfToken) }}

        <div class="btn-group">
          <button type="submit" class="btn btn-danger">Submit</button>
          <a href="/register" class="btn btn-outline-danger">Register</a>
        </div>
      </form>
    </div>
    <div class="col"></div>
  </div>
{% endblock %}
